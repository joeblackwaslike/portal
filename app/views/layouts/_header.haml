- case current_layout

- when 'sections'

  #header
    .logo-bg
    %a.logo{href: root_path}
      %span.visible-xs new earth project
    .inner-wrap.title
      .text.pull-left sovereignty
      .text.pull-right new earth
      .page-icon
    = render partial: 'layouts/main_menu'


- when 'application'

  %header#main
    .title-row
      .title
        = this_section
      .logo-wrapper
        %a.logo{href: root_path}

      .section
        %span.section-text= this_subsection
        %i.institute-icon

- when 'splash'

  #header
    .logo-bg
    %a.logo{href: root_path}
    .title.inner-wrap
      .spacer
        %a.video.vimeo.lightbox(href="http://vimeo.com/70703279")
          .icon
          %span watch the video