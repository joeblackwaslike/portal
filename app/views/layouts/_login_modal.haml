#loginModal.modal.fade{tabindex: "-1", role: 'dialog', 'aria-labelledby' => 'loginModalTitle', 'aria-hidden' => 'true'}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{type: 'button', 'data-dismiss' => 'modal', 'aria-hidden' => 'true'} &times;
        %h4#loginModal.modal-title Sign in to New Earth Project
      .modal-body
        .account-wall
          %div.profile-img 
          %form.form-signin
            %input.form-control.autofocus{type: 'email', placeholder: 'Email', required: 'required'}
            %input.form-control{type: 'password', placeholder: 'Password', required: 'required'}
            %button.btn.btn-lg.btn-primary.btn-block{type: 'submit'} Sign in
            %label.checkbox.pull-left
              %input{type: 'checkbox', value: 'remember-me'}
              Remember me
            %a.pull-right.need-help{href: '#'} Need Help?
            %span.clearfix
            %a.text-center.new-account{href: '#'} Create an Account
